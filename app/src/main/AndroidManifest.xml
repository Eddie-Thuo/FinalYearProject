<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eddiethuo.simplesignin">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <use-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SignInActivity"
            android:label="@string/sign_in_activity_email"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AnswerActivity"
            android:label="Answer"></activity>

        <activity
            android:name=".ProfileSummaryActivity"
            android:label="Profile Details"></activity>

        <activity
            android:name=".CourseContactsActivity"
            android:label="Course Contacts">

        </activity>

        <activity
            android:name=".StudentUnionActivity"
            android:label="Student Union">

        </activity>

        <activity
            android:name=".TwitterActivity"
            android:label="Twitter">
        </activity>

        <activity
            android:name=".TimeTableActivity"
            android:label="Exam Info">
        </activity>

        <activity
            android:name=".FAQListActivity"
            android:label="FAQ">
        </activity>

        <activity
            android:name=".InstagramActivity"
            android:label=" Swansea University Instagram">
        </activity>

        <activity
            android:name=".ContactUsActvity"
            android:label="Contact Info">
        </activity>

    </application>

</manifest>