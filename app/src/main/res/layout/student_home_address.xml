<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="2dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:src="@drawable/icon_home" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_address_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ProfileDetailsHeadingsTheme"
            android:hint="Home Address"
            />

        <EditText
            android:id="@+id/student_address_field_1"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_address_text_view"
            android:text="38 Grays Road"
            android:clickable="false"
            android:textAlignment="textStart"/>

        <TextView
            android:layout_below="@id/student_address_field_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address Line 1"
            android:textAlignment="textStart"
            android:layout_marginBottom="16dp"

            />

        <EditText
            android:id="@+id/student_address_field_2"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_below="@id/student_address_field_1"
            android:text="Slough" />
        <TextView
            android:layout_below="@id/student_address_field_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address Line 2"
            android:textAlignment="textStart"
            android:layout_marginBottom="16dp"
            />


        <EditText
            android:id="@+id/student_postcode_field"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Postcode"
            android:text="SL1 3QG"
            android:clickable="false"/>

        <TextView
            android:layout_below="@id/student_address_field_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Postcode"
            android:textAlignment="textStart"
            android:layout_marginBottom="16dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"/>

    </LinearLayout>

</LinearLayout>
