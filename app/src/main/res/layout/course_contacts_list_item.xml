<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/staff_image"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/nealharman"/>

        <TextView
            android:id="@+id/staff_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Neal Harman"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@id/staff_image"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout="@id/staff_image"
            />

        <TextView
            android:id="@+id/module_title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CS-110 Programming"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            android:layout_below="@id/staff_name"
            android:gravity="bottom|center_horizontal"
            android:layout_toRightOf="@id/staff_image"
            />

        <Button
            android:id="@+id/contact_option_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:text="Contact Now"
            android:layout_marginRight="8dp"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:textColor="@color/main_color"
            />
    </RelativeLayout>


</android.support.v7.widget.CardView>