<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">#004D40</item>
        <item name="colorAccent">@android:color/holo_orange_dark</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle2</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:colorAccent">@android:color/holo_red_dark</item>
        <item name="android:windowFullscreen">false</item>
        <item name ="android:statusBarColor">#004D40</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle2</item>
        <!--<item name="android:textColorSecondary">@android:color/black</item>-->
        <item name="android:navigationBarColor">#004D40</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme3" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="colorPrimary">@color/main_color</item>
        <item name= "colorPrimaryDark">#004D40</item>
        <item name="android:textColorSecondary">@color/main_color</item>
        <item name="android:colorAccent">@android:color/holo_orange_dark</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="MyDrawerArrowToggle2" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="NavTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorAccent">@android:color/holo_red_dark</item>
    </style>

    <style name="MenuTheme" parent="android:ThemeOverlay.Material.Light">
        <item name ="colorAccent">@color/main_color</item>
    </style>
    <style name="ProfileDetailsHeadingsTheme">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="MyFloatingActionButton" parent ="Theme.AppCompat.Light">
        <item name= "android:colorAccent">@color/main_color</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>


</resources>
